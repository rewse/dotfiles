{{- $bin := "" }}
{{- if eq .chezmoi.os "darwin" }}
{{- $bin = "/opt/homebrew/bin/" }}
{{- end }}
{
  "mcpServers": {
{{ template "mcp-servers.json.tmpl" . }},
    "brave-search": {
      "command": "{{ $bin }}/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "{{ onepasswordRead "op://chezmoi/Brave/credential" }}"
      },
      "disabled": false,
      "autoApprove": [
        "brave_web_search"
      ]
    },
    "fetch": {
      "command": "{{ $bin }}uvx",
      "args": [
        "mcp-server-fetch",
        "--ignore-robots-txt"
      ],
      "disabled": false,
      "autoApprove": [
        "fetch"
      ]
    },
    "playwright": {
      "command": "{{ $bin }}npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "disabled": false,
      "autoApprove": [
        "browser_click",
        "browser_close",
        "browser_console_messages",
        "browser_drag",
        "browser_hover",
        "browser_navigate",
        "browser_navigate_back",
        "browser_network_requests",
        "browser_press_key",
        "browser_resize",
        "browser_select_option",
        "browser_snapshot",
        "browser_tabs",
        "browser_take_screenshot",
        "browser_type",
        "browser_wait_for"
      ]
    }
  }
}

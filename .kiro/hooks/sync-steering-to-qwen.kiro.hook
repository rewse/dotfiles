{
  "enabled": true,
  "name": "Sync Steering to QWEN",
  "description": "When files in dot_kiro/steering directory are updated, automatically update dot_qwen/QWEN.md with the same changes to keep both locations synchronized",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "dot_kiro/steering/*"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Files in dot_kiro/steering have been updated. Please review the changes and update dot_qwen/QWEN.md accordingly to maintain synchronization between the steering guidelines and QWEN documentation. Ensure that any modifications to steering rules are reflected in the QWEN.md file in the same way."
  }
}